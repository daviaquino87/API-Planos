<!DOCTYPE html>
<html>
   <header>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
   </header>
   <body style="background-color: #adb5bd;">
      <div class="container-fluid">
         <nav class="navbar navbar-dark bg-primary mt-2">
            <div class="container-fluid">
               <h2 class="navbar-brand">Tabela de Planos</h2>
               <a href="/planos/cadastro" class="btn btn-success" type="submit">Adicionar novo plano</a>
            </div>
         </nav>
         <br>
         <table class="table table-dark table-hover">
            <thead>
               <tr>
                  <th>ID</th>
                  <th>Plano</th>
                  <th>Preço</th>
                  <th>Ações</th>
               </tr>
            </thead>
            <tbody>
               <% Planos.forEach(plano => {%>
               <tr>
                  <td> <%= plano.id %></td>
                  <td> <%= plano.nome %></td>
                  <td> <%= plano.preco %></td>
                  <td id="td-acoes">
                     <div id="acoes">
                        <a href="/planos/edit/<%= plano.id %>"> <button class="btn btn-warning">Editar</button></a>
                        <form method="POST" action="/planos/delete" style="display: inline;" onsubmit="confirmarDelecao(event,this)">
                           <input type="hidden" name="id" value="<%= plano.id %>">
                           <button class="btn btn-danger btn btn-danger">Delete</button>
                        </form>
                     </div>
                  </td>
               </tr>
               <%})%>
            </tbody>
         </table>
      </div>
   </body>
</html>